{
  "name": "kushim-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Kushim - Compliance Automation Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "backend:dev": "npm run dev --workspace=apps/backend",
    "web:dev": "npm run dev --workspace=apps/web",
    "db:migrate": "npm run migrate --workspace=apps/backend",
    "db:seed": "npm run seed --workspace=apps/backend"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
