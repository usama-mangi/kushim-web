# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/kushim?schema=public"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV="development"
PORT="3001"
FRONTEND_URL="http://localhost:3000"

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET="your-secret-key-change-in-production"

# =============================================================================
# AWS INTEGRATION
# Required for: IAM MFA checking, S3 encryption verification, CloudTrail monitoring
# How to get: https://docs.aws.amazon.com/IAM/latest/UserGuide/id_credentials_access-keys.html
# =============================================================================
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET_NAME="kushim-evidence-storage"

# =============================================================================
# GITHUB INTEGRATION
# Required for: Branch protection, commit signing, security scanning
# How to get: https://github.com/settings/tokens (need repo, read:org scopes)
# =============================================================================
GITHUB_TOKEN=""

# =============================================================================
# OKTA INTEGRATION
# Required for: MFA enforcement, user access management, policy compliance
# How to get: https://developer.okta.com/docs/guides/create-an-api-token/
# =============================================================================
OKTA_DOMAIN="https://your-domain.okta.com"
OKTA_API_TOKEN=""

# =============================================================================
# JIRA INTEGRATION (Secret Weapon!)
# Required for: Automatic ticket creation for failed compliance controls
# How to get: https://support.atlassian.com/atlassian-account/docs/manage-api-tokens-for-your-atlassian-account/
# =============================================================================
JIRA_DOMAIN="your-domain.atlassian.net"
JIRA_EMAIL="your-email@example.com"
JIRA_API_TOKEN=""

# =============================================================================
# SLACK INTEGRATION
# Required for: Compliance alerts, daily summaries, integration health warnings
# How to get: https://api.slack.com/messaging/webhooks
# =============================================================================
SLACK_WEBHOOK_URL=""

# =============================================================================
# PRISMA CONFIGURATION
# =============================================================================
PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING="1"
